{
  "name": "astro-sphere",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "dev": "BROWSER=firefox astro dev --open",
    "dev:network": "astro dev --host",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "preview:network": "astro dev --host",
    "astro": "astro",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.astro": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,mjs,cjs,json,md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@astrojs/check": "^0.5.9",
    "@astrojs/mdx": "^2.2.0",
    "@astrojs/rss": "^4.0.5",
    "@astrojs/sitemap": "^3.1.1",
    "@astrojs/solid-js": "^4.0.1",
    "@astrojs/tailwind": "^5.1.0",
    "@tailwindcss/typography": "^0.5.10",
    "astro": "^4.16.18",
    "clsx": "^2.1.0",
    "fuse.js": "^7.0.0",
    "markdown-it": "^14.1.1",
    "sanitize-html": "^2.15.0",
    "sharp": "^0.33.2",
    "solid-js": "^1.9.4",
    "tailwind-merge": "^2.2.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.2"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/sanitize-html": "^2.15.0",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.6.0",
    "eslint-plugin-solid": "^0.14.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "3.5.3",
    "prettier-plugin-astro": "0.14.1",
    "typescript-eslint": "^8.56.1"
  }
}
