---
import "@styles/global.css";
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Drawer from "@components/Drawer.astro";
const { title, description, fullHeight = false } = Astro.props;
import { SITE } from "@consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${title} | ${SITE.TITLE}`} description={description} />
  </head>
  <body class:list={[fullHeight && "h-screen overflow-hidden flex flex-col"]}>
    <Header />
    <Drawer />
    <main class:list={[fullHeight && "flex-1 flex flex-col"]}>
      <slot />
    </main>
    <Footer />
  </body>
</html>
